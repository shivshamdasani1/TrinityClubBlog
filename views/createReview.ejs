<%- include('partials/header', {title:"Create Review"}) -%>

<h2>Add a Review to a Club</h2>

<form action="/createReview" method="POST">
  <label for="name">Club Name:</label>
  <select id="name" name="clubName">
    <%for(let club of clubs) {%>

    <option value = "<%=club%>"><%=club%></option>
    <% } %></select><br>

  <label for="photo">Review:</label>
  <input type="text" id="review" name="review" value=""><br>
  <label for="photo">Author Name:</label>
  <input type="text" id="authorName" name="authorName" value=""><br>
  <br><br>
  <input type="submit" value="Add Your Review!">

</form>

